    </header>
    <main>
      <div class="p-2 md:p-4">
        <div
          class="bg-black text-white px-2 py-5 rounded-md text-2xl"
          onclick="navigator.clipboard.writeText(this.innerText.replace('> ', ''))"
        >
          &gt; <span class="text-yellow-100">git</span> commit <span
            class="text-gray-400">-m</span
          >
          <span class="text-blue-300">"message ðŸš€"</span>
        </div>
      </div>
      <div class="grid grid-cols-12 px-2 md:px-4 gap-4 my-2 md:my-4">
        {gitmojis.map((item) => <Card item={item} />)}
